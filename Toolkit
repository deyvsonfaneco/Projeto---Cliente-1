    /**
    * @return String
    * m√©todo que remove os caracteres do CNPJ
    */
	public static String removerCaracteres(String cgc){
        cgc = cgc.replaceAll('/', '');
        cgc = cgc.replaceAll(',', '');
        cgc = cgc.replaceAll('-', '');
        cgc = cgc.replaceAll('\\.', '');
        return cgc;
    }
